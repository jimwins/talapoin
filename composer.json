{
    "name": "jimwins/talapoin",
    "description": "Talapoin is a small blogging/CMS system, used on trainedmonkey.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Jim Winstead",
            "email": "jimw@trainedmonkey.com"
        }
    ],
    "autoload": {
        "psr-4": {
          "Talapoin\\" : "src/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jimwins/backblaze-b2-sdk-php"
        }
    ],
    "require": {
        "slim/slim": "4.*",
        "twig/twig": "^3.3",
        "twig/html-extra": "^3.3",
        "slim/twig-view": "^3.3",
        "slim/psr7": "^1.6",
        "middlewares/trailing-slash": "^2.0",
        "php-di/php-di": "^6.1",
        "slim/http": "^1.0",
        "php-di/slim-bridge": "^3.0",
        "robmorgan/phinx": "^0.16.0",
        "symfony/yaml": "^6.1",
        "jimwins/titi": "^0.0",
        "jimwins/akismet-api": "@dev",
        "wildbit/postmark-php": "^4.0",
        "ezyang/htmlpurifier": "^4.16",
        "vazaha-nl/mastodon-api-client": "^1.0",
        "indieweb/mention-client": "^1.2",
        "srwiez/thumbhash": "^1.2",
        "robinvdvleuten/ulid": "^5.0",
        "tarikozket/backblaze-b2-sdk-php": "dev-master",
        "aws/aws-sdk-php": "^3.298",
        "elasticsearch/elasticsearch": "^8.12",
        "mf2/mf2": "^0.5.0",
        "masterminds/html5": "^2.8",
        "cjrasmussen/bluesky-api": "^2.0",
        "meilisearch/meilisearch-php": "^1.6",
        "guzzlehttp/guzzle": "^7.7",
        "http-interop/http-factory-guzzle": "^1.0",
        "erusev/parsedown": "^1.7",
        "twig/markdown-extra": "^3.8"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.8",
        "phpstan/phpstan": "^1.10"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
